                    <li><a href="/users/profile">Profile</a></li>
                    <li><a href="/authenticate/sign-out">Sign Out</a></li>
                  <% } else { %>  
                  <li><a href="/authenticate/sign-in">Sign In</a></li>
                  <li><a href="/authenticate/sign-up">Sign Up</a></li>
                  <% } %>
                </ul>
              </div>
            </div>
